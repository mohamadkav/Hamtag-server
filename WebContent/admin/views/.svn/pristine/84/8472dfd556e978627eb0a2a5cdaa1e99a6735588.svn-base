<div ng-controller="DefineProductViewCtrl">
	<table class="table table-bordered table-striped center-aligned-table" ng-show="products">
		<tr class="success">
			<th>عنوان</th>
			<th>قیمت</th>
			<th>توضیحات</th>
			<th>مشاهده/حذف</th>
		</tr>
		<tr ng-repeat="product in products" ng-hide="product.is_deleted">
			<td>{{product.title}}</td>
			<td>{{product.price}}</td>
			<td>{{product.description}}</td>
			<td>
				<i style="color:#428bca;padding:0 5px;cursor:pointer" class="glyphicon glyphicon-eye-open" ng-click="seeProductDetails(product)"></i>
				<i style="color:#d9534f;padding:0 5px;cursor:pointer" class="glyphicon glyphicon-remove" ng-click="removeProduct(product,$index)"></i>
			</td>		
		</tr>
	</table>
</div>