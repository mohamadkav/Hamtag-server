<div style="direction:rtl">		
	<div class="modal-header">
        <h2 style="font-weight:bold">اضافه کردن آیتم</h2>
    </div>
    <div class="modal-body">
        <select style="margin-bottom:20px" ng-model="$parent.choice" ng-options="option.value as option.text for option in choices">
            <!-- <option value=""></option> -->
        </select>
        <div ng-show="$parent.choice == 'old'">
            <multiselect class="input-xlarge" multiple="false" ng-model="item.storeItem" options="storeItem.gid as storeItem.title for storeItem in storeItems" change="selected()" ms-header="انتخاب آیتم"></multiselect>
        </div>
        <div ng-show="$parent.choice == 'new'">
            <table class="table">
                <tr>
                    <td>
                        نقشه:
                        <multiselect class="input-xlarge" multiple="false" ng-model="item.map" options="map.map_gid as map.map_name for map in maps" change="selected()" ms-header="انتخاب نقشه"></multiselect>
                    </td>
                    <td>
                        عنوان:
                        <input type="text" class="form-control" ng-model="item.mapzoom_title">
                    </td>
                </tr>
                <tr>
                    <td>
                        سطح زوم نقشه:
                        <input type="text" class="form-control" ng-model="item.mapzoom_level">
                    </td>
                    <td>
                        توضیحات:
                        <input type="text" class="form-control" ng-model="item.mapzoom_desc">
                    </td>
                </tr>
                <tr>
                    <td>
                        سایز فایل:
                        <input type="text" class="form-control" ng-model="item.file_size">
                    </td>
                    <td>
                        checksum فایل:
                        <input type="text" class="form-control" ng-model="item.file_checksum">
                    </td>
                </tr>
                <tr>
                    <td>
                        آدرس فایل:
                        <input type="text" class="form-control" ng-model="item.file_address">
                    </td>
                    <td></td>
                </tr>
            </table>
        </div>
        <div ng-show="showError">
            <span style="font-size:14px;color:red;text-decoration:underline"><i class="glyphicon glyphicon-remove"></i>ثبت محصول ناموفق: {{errorBoxMessage}}</span>
        </div>
    </div>
    <div class="modal-footer" style="text-align:center">
        <button class="btn btn-warning" ng-click="ok()">اضافه کن</button>
    </div>
</div>